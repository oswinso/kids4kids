extends layout

block content
	.container
		.row
			h1.text-center K4K
		.row
			h3 K4K Office Visitor Form
				form(role='form', action="/visitor",method="post", style='max-width: 300px;')
					.form-group
						input.form-control(type='text', name="name", placeholder='Name')
					.form-group
						input.form-control(type='text', name="hkid", placeholder='Hong Kong ID')
					.form-group
						input.form-control(type='text', name="purpose", placeholder='Purpose')
					button.btn.btn-default(type='submit') Submit